@model LoginViewModel
<!-- page-wrapper Start-->
<section>         
    <div class="container-fluid p-0">
        <div class="row">
            <div class="col-12">
                <div class="login-card">
                    <form asp-action="Login" class="theme-form login-form">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <h4>Вход</h4>
                        <h6>Добро пожаловать. Введите логин и пароль</h6>
                        <div class="form-group">
                            <label>Логин</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="icon-email"></i></span>
                                <input asp-for="Email" class="form-control" required />
                                <span asp-validation-for="Email" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="icon-lock"></i></span>
                                <input asp-for="Password" class="form-control" required />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="form-group">
                            <button class="btn btn-primary btn-block" type="submit">Вход</button>
                        </div>
                        <p>Нету аккаунта?<a class="ms-2" asp-controller="Account" asp-action="Create">Регистрация</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- page-wrapper end-->