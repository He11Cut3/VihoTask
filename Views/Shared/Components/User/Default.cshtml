@model UserModel
@if(User.Identity.IsAuthenticated)
{
    <div class="sidebar-user text-center">
        @if(Model.Photo != null)
        {
            <a class="setting-primary" asp-controller="Home" asp-action="UserInfo"><i data-feather="settings"></i></a>

            <img class="img-90 rounded-circle" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Photo)" alt="">
        }
        
        <div class="badge-bottom"><span class="badge badge-primary"></span></div><a asp-controller="Home" asp-action="UserInfo">
            <h6 class="mt-3 f-14 f-w-600">@Model.UserName</h6>
        </a>
        <p class="mb-0 font-roboto">@Model.PostUser</p>
    </div>
}
